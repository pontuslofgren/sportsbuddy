<div class="card p-3 mx-auto justify-content-between" style="height:">
  <div class="row mt-1 align-items-center">
    <div class="col-12 col-md-2"><%= image_tag("icon-categories/#{workout.category.name}.png", class: "avatar-icon")%></div>
    <div class="col-12 col-md-8"><%= workout.category.name %></div> <!-- Placeholder -->
  </div>
  <% if workout %>
  <div class="mt-3 opacity-75"><%= format_date_time(workout.start_date_time)%></div>
  <% end %>

  <div style="height: 125px">
    <h4 class="mt-3"><%= workout.title.truncate(25) %></h4>
    <p class="mt-3 opacity-75"> <%= workout.description.truncate_words(15) %>
    </p>
  </div>

  <div class="dflex justify-content-between align-items-end mt-3">
    <div><u>Spots:</u> <%= workout.spots %></div>
  </div>


    <div class="row mt-1 align-items-center mt-3">
    <div class="col-12 col-md-4 col-lg-3 avatar mt-3">
      <% if workout.user.photo.attached?  %>
        <%= cl_image_tag workout.user.photo.key %>
      <% else %>
        <%= render "shared/avatar" %>
      <% end %>
    </div>
    <div class="col-12 col-md-8 col-lg-9 mt-3">
      <small><%= workout.user.first_name %> <%= workout.user.last_name %></small>
      <br>
      <small class="opacity-75">Organizer</small>
    </div>
  </div>

   <div class="mt-3">
      <%= link_to 'See Details', :back , class: 'btn btn-primary text-white w-100 mt-2' %>
    </div>

</div>
