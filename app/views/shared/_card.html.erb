
<div class="row card p-3 ms-auto me-auto" style="max-width: 400px">
  <div class="row mt-1 align-items-center">
    <div class="col-2"><%= image_tag("icons/cycling.png", class: "avatar-icon")%></div>
    <div class="col-8">Cycling</div> <!-- Placeholder -->
  </div>
  <% if workout %>
  <div class="mt-3 opacity-75"><%= format_date_time(workout.start_date_time)%></div>
  <% end %>
  <h4 class="mt-3"><%= workout.title %></h4>

  <p class="mt-3 opacity-75"> <%= workout.description %>
  </p>

  <div class="dflex justify-content-between align-items-end mt-3">
    <div><u>Spots:</u> <%= workout.spots %></div>
  </div>


   <div class="row mt-1 align-items-center mt-3">
    <div class="col-2 avatar mt-3">
    <% if workout.user.photo.attached?  %>
      <%= cl_image_tag workout.user.photo.key%>
    <% else %>
      <%= render "shared/avatar" %>
    <% end %>
    </div>
      <div class="col-8 mt-3"><small><%= workout.user.first_name %> <%= workout.user.last_name %></small>
      <br>
      <small class="opacity-75">Organizer</small>
      </div>
    </div>

   <div class="mt-3">
      <%= link_to 'See Details', :back , class: 'btn btn-primary text-white w-100 mt-2' %>
    </div>

</div>
