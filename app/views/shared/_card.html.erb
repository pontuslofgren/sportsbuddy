<div class="card-homepage p-3" style="max-width: 350px">
  <div class="row mt-1 align-items-center">
    <div class="col-2"><%= image_tag("icons/cycling.png", class: "avatar-icon")%></div>
    <div class="col-8">Cycling</div> <!-- Placeholder -->
  </div>
  <% if workout %>
  <div class="mt-3 opacity-75"><%= workout.start_date%> -- <%= workout.start_time.hour%></div>
  <% end %>
  <h4 class="mt-3"><%= workout.title %></h4> <!-- Placeholder -->

  <p class="mt-3 opacity-75"> <%= workout.description %>
  </p> <!-- Placeholder -->

  <div class="dflex justify-content-between align-items-end mt-3">
    <div><u>Spots:</u> <%= workout.spots %></div> <!-- Placeholder -->
  </div>


   <div class="row mt-1 align-items-center mt-3">
    <div class="col-2 avatar">
    <% if workout.user.photo.attached?  %>
      <%= cl_image_tag workout.user.photo.key%>
    <% else %>
      <%= render "shared/avatar" %>
    <% end %>
    </div>
    <div class="col-8"><small><%= workout.user.first_name %></small></div> <!-- Placeholder -->
  </div>

   <div class="mt-3">
      <%= link_to 'See Details', :back , class: 'btn btn-primary text-white' %>
    </div>

</div>
