<div class="extended-navbar border-bottom">
  <div class="container extended-navbar border-bottom">

    <% if @profile.photo.attached? %>
      <%= cl_image_tag @profile.photo.key, class:"profile-photo border rounded-circle", crop: :fill, width: 100, height:100 %>
    <% else %>
      <i class="fa-solid fa-user fs-1 profile-photo border rounded-circle bg-primary"></i>
    <% end %>



  </div>

</div>

<div class="container mb-3 mt-5 py-3 border-bottom">

  <div class="row">
    <div class="col-md-8">
      <h2><%= @profile.full_name %></h2>
      <p><%= @profile.biography %></p>
    </div>
  </div>
</div>

<div class="container mb-3">

  <div class="row mb-5">
    <div class="col-md-8">

      <div class="mb-3">
        <h3>Workouts</h3>
        <% if @workouts.any? %>
          <% @workouts.each do |workout| %>
            <%= render partial: "shared/list_card",
            locals: {workout: workout} %>
          <% end %>
        <% else %>
          No workouts, yet...
        <% end %>
      </div>

    </div>

    <!--  Profile action  -->
    <div class="col-md-4">
    </div>
  </div>
</div>
