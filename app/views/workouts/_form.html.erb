<h2>Add a new workout</h2>

    <%= simple_form_for(@workout) do |f| %>

      <h4>Describe your workout</h4>
      <div class="card p-4 mb-3">
        <div class="mb-3">
          <%= f.input :title, label: "Title" %>
        </div>
        <div class="mb-3">
          <%= f.input :description, label: "Description" %>
        </div>
        <div class="mb-3">
          <%= f.association :category, label: "Categories", as: :radio_buttons, include_hidden: false %>
        </div>
        <div class="mb-3">
          <%= f.association :level, label: "Levels", as: :radio_buttons, include_hidden: false %>
        </div>

        <div class="mb-3">
          <%= f.input :spots, label: "Number of spots" %>
        </div>
      </div>

      <h4>When is your workout</h4>
       <div class="card p-4 mb-3">
         <div class="mb-3">
          <%= f.input :start_date, label: "Date", as: :string, class: 'form-control' %>
               </div>
         <div class="mb-3">
          <%= f.input :start_time, label: "Time", as: :string, class: 'form-control' %>
               </div>
         <div class="mb-3">
          <%= f.input :duration, label: "Duration", as: :string, class: 'form-control' %>
               </div>
       </div>

      <h4>Where is your workout</h4>

      <div class="card p-4 mb-3">
        <div class="mb-3">
          <%= f.input :address, label: "Address" %>
        </div>
        <div class="mb-3">
          <%= f.association :location, label: "Location type", as: :radio_buttons, include_hidden: false %>
        </div>

      </div>

      <%= f.submit "Save", class: "btn btn-primary" %>
    <% end %>
