<div class="container mt-3">
  <h2>Find a workout</h2>
  <button class="btn btn-primary btn-sm" type="button" data-bs-toggle="collapse" data-bs-target="#filter" aria-expanded="false" aria-controls="collapseExample">
    <i class="fa-solid fa-filter"></i>
  </button>
</div>

<div class="collapse border p-3 container mt-3 rounded" id="filter" style="background-color: #212529"><%= render 'search_form' %></div>

<div class="container mt-3 mb-5">
  <h3>Results</h3>
  <div class="row" data-controller="map"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY']%>"
  data-map-markers-value="<%= @markers.to_json %>">
    <div class="col-md-8">
      <% @workouts.each do |workout| %>
        <%= render partial: "shared/list_card",
            locals: {workout: workout} %>
      <% end %>
    </div>
    <div class="col-md-4 border rounded" style="height: 500px;"
      data-map-target="mapContainer">
    </div>
  </div>
</div>
